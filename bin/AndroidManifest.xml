<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inqueryprocessing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inqueryprocessing.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inqueryprocessing.MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/ReportTheme" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.pref.Preference"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.pair.PairDevices"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.Bluetooth"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.about.About"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.reports.Reports"
            android:screenOrientation="portrait"
            android:theme="@style/ReportTheme" >
        </activity>
        <activity
            android:name="com.inqueryprocessing.reports.AllLogs"
            android:screenOrientation="portrait"
            android:theme="@style/ReportTheme" >
        </activity>
        <activity
            android:name=".bluetooth.BluetoothChat"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".bluetooth.DeviceListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".createreport.CreateReport"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>